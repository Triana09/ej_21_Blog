  <body>
    <div class="all d-flex flex-column justify-content-center align-items-center">
      <div class="container">
        <div class="card mb-3 shadow">
          <h5 class="card-header">Crear nuevo Art√≠culo</h5>
          <div class="card-body">
            <form action="/admin" method="post" enctype="multipart/form-data">
              <div class="mb-3">
                <label for="titleNewArt" class="form-label">Titulo</label>
                <input
                  required
                  name="titleNewArt"
                  type="text"
                  class="form-control"
                  id="titleNewArt"
                  placeholder="Ingrese titulo..."
                />
              </div>
              <div class="mb-3">
                <label for="contentNewArt" class="form-label">Contenido</label>
                <textarea
                  required
                  name="contentNewArt"
                  type="text"
                  class="form-control"
                  id="contentNewArt"
                  placeholder="Ingrese contenido..."
                  aria-label="With textarea"
                ></textarea>
              </div>
              <div class="mb-3">
                <label for="imgFileNewArt" class="form-label">Archivo de imagen</label>
                <input
                  required
                  name="imgFileNewArt"
                  type="file"
                  class="form-control"
                  id="imgFileNewArt"
                  placeholder="Seleccione una imagen..."
                />
              </div>
              <div class="mb-3">
                <label for="imgNewArt" class="form-label">Url de imagen</label>
                <input
                  required
                  name="imgNewArt"
                  type="text"
                  class="form-control"
                  id="imgNewArt"
                  placeholder="Ingrese url de imagen..."
                />
              </div>
              <!-- <div class="mb-3">
                <label for="userId_NewArt" class="form-label">Id del autor/usuario</label>
                <input
                  required
                  name="userId_NewArt"
                  type="text"
                  class="form-control"
                  id="userId_NewArt"
                  placeholder="Ingrese id del autor..."
                />
              </div> -->

              <button type="submit" class="btn btn-success">Guardar</button>
            </form>
          </div>
        </div>
        <a href="/admin">Volver</a>
      </div>
      <% if(typeof validaciones != 'undefined') { %> <% validaciones.forEach((validacion)=>{ %>
      <div class="alert alert-warning dismissible fade show" role="aler">
        <strong><%= validacion.msg %> </strong>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
      </div>
      <% })} %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
