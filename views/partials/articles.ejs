<% for (let i = 0; i <= 10; i++ ) {%>
<div class="post-preview">
  <a href="http://localhost:3000/articulos/<%- i %>">
    <h2 class="post-title"><%= articles[i].title %></h2>
    <p class="post-subtitle"><%= articles[i].content %></p>
    <!-- contenido de artículo recortado -->
    <!--Necesitamos insertar parte del texto con un maximo de palabras -->
    <img src="<%= articles[i].img %>" alt="" id="imghome" />
  </a>
  <p class="post-meta">
    Posted by
    <a href="#!"><%= articles[i].userId %></a>
    on <%= articles[i].createdAt %>
  </p>
</div>
<!-- Divider-->
<hr class="my-4" />
<%} %>

<div class="d-flex justify-content-end mb-4">
  <a class="btn btn-primary text-uppercase" href="#!">Older Posts →</a>
</div>
